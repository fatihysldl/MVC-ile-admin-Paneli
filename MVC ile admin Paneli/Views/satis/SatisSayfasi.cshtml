@model MVC_ile_admin_Paneli.Models.entity.tblSatis
@{
    ViewBag.Title = "SatisSayfasi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SatisSayfasi</h2>

@using (Html.BeginForm("SatisSayfasi", "satis", FormMethod.Post))
{
    <div class="form-group">
        <label>Ürün </label>
        @Html.DropDownListFor(x => x.tblUrunler.urunId, (List<SelectListItem>)ViewBag.urun, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Personel</label>
        @Html.DropDownListFor(x => x.tblPersonel.personelId, (List<SelectListItem>)ViewBag.personeller, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Müşteri</label>
        @Html.DropDownListFor(x => x.tblMusteri.musteriId, (List<SelectListItem>)ViewBag.musteriler, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Fiyat</label>
        @Html.TextBoxFor(x => x.fiyat, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>tarih</label>
        @Html.TextBoxFor(x => x.tarih, new { @class = "form-control" })
    </div>

    @Html.HiddenFor(x => x.satisId)

    <button class="btn btn-primary">Satış Yap</button>
}